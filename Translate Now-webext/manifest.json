{
	"name": "Translate Now",
	"description": "Right click a selection to translate words in Firefox.",
	"homepage_url": "http://hugsmile.eu",
	"manifest_version": 2,
	"version": "2.0.2",
	"background": {
		"scripts": ["background.js"]
	},
	"icons": {
		"64": "icons/translatenow-64.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["translatenow.js"],
			"run_at": "document_start"
		}
	],
	"applications": {
		"gecko": {
			"id": "@translatenow",
			"strict_min_version": "48.0"
		}
	},
	"permissions": ["storage", "tabs", "contextMenus", "notifications"],
	"options_ui": {
		"page": "options.html"
	}
}